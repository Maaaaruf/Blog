@using Microsoft.AspNet.Identity
@model Blog.Web.Areas.User.Models.Articles.ArticleModel

<!-- Page Content -->
<div class="container pt-4">

    <div class="row">

        <!-- Blog Entries Column -->
        <div class="col-md-8">

            <h1 class="my-4">

                <small></small>
            </h1>

            @foreach (var article in Model.Articles)
            {
                <!-- Blog Post -->
                <div class="card mb-4">
                    <img class="card-img-top" src="http://placehold.it/750x300" alt="Card image cap">
                    <div class="card-body">
                        <h2 class="card-title">@article.Title</h2>
                        @Html.ActionLink("Edit", "Edit", new { id = article.Id })|
                        @Html.ActionLink("Delete", "Delete", new { id = article.Id })
                        <p class="card-text">@article.Descreption</p>
                        @*<a href="#" class="btn btn-primary">Read More &rarr;</a>*@
                    </div>
                    <div class="card-footer text-muted">
                        @article.PostedOn.Day/@article.PostedOn.Month/@article.PostedOn.Year  @article.PostedOn.Hour:@article.PostedOn.Minute
                    </div>
                </div>
            }


            <!-- Pagination -->
            @*<ul class="pagination justify-content-center mb-4">
                    <li class="page-item">
                        <a class="page-link" href="#">&larr; Older</a>
                    </li>
                    <li class="page-item disabled">
                        <a class="page-link" href="#">Newer &rarr;</a>
                    </li>
                </ul>*@

        </div>

        <!-- Sidebar Widgets Column -->
        <div class="col-md-4">

            <!-- Search Widget -->
            <div class="card my-4">
                <h5 class="card-header">Search</h5>
                <div class="card-body">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search for...">
                        <span class="input-group-append">
                            <button class="btn btn-secondary" type="button">Go!</button>
                        </span>
                    </div>
                </div>
            </div>

            <!-- Categories Widget -->
            <div class="card my-4">
                <h5 class="card-header"><a href="~/User/Article">Categories</a></h5>
                <div class="card-body">
                    <div class="row">
                        @if (Model.Categories == null || Model.Categories.Count < 1)
                        {
                            <div class="col-lg-6">
                                <p>No Categories Found</p>
                            </div>
                        }
                        else
                        {
                            <div class="col-lg-6">
                                <ul class="list-unstyled mb-0">
                                    @for (int i = 0; i < Model.CategoryHalfCount; i++)
                                    {
                                        <li>
                                            @Html.ActionLink(Model.Categories[i].Name, "IndexByCategory", new { id = Model.Categories[i].Id })
                                        </li>
                                    }
                                </ul>
                            </div>
                            <div class="col-lg-6">
                                <ul class="list-unstyled mb-0">

                                    @for (int i = Model.CategoryHalfCount; i < Model.Categories.Count; i++)
                                    {
                                        <li>
                                            @Html.ActionLink(Model.Categories[i].Name, "IndexByCategory", new { id = Model.Categories[i].Id })
                                        </li>
                                    }


                                </ul>
                            </div>

                        }
                    </div>
                </div>
            </div>

            <!-- Side Widget -->
            <div class="card my-4">
                <h5 class="card-header">Side Widget</h5>
                <div class="card-body">
                    You can put anything you want inside of these side widgets. They are easy to use, and feature the new Bootstrap 4 card containers!
                </div>
            </div>

        </div>

    </div>
    <!-- /.row -->

</div>
<!-- /.container -->
<!-- Footer -->
<footer class="py-5 bg-dark">
    <div class="container">
        <p class="m-0 text-center text-white">Copyright &copy; Your Website 2020</p>
    </div>
    <!-- /.container -->
</footer>

<!-- Bootstrap core JavaScript -->
<script src="~/Content/blog/vendor/jquery/jquery.min.js"></script>
<script src="~/Content/blog/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>



